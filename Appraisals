    gem "activerecord", "~> 4.0.1"
    gem "ancestry", "~> 2.1.0"
  end

  appraise "activerecord-4.1" do
    gem "activerecord", "~> 4.1.1"
    gem "ancestry", "~> 2.1.0"
  end

  appraise "activerecord-4.2" do
    gem "activerecord", "~> 4.2.1"
    gem "ancestry", "~> 2.1.0"
  end
end